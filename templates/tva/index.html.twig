{% extends 'base.html.twig' %}

{% block title %}Tva index{% endblock %}

{% block body %}
 <div class="container col-8 col-md-6 col-lg-4">
    <h1 class="text-center my-5">Tva index</h1>
<div class="text-end me-5 mt-2">
    <a href="{{ path('category_new') }}"><button class="secondbuttonitem" >Ajouter</button></a>
</div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tva</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tva in tvas %}
            <tr>
                <td>{{ tva.id }}</td>
                <td>{{ tva.tva }}</td>
                <td>
                    <a href="{{ path('tva_edit', {'id': tva.id}) }}"><i class="far fa-eye fs-5 me-2"></i></a>
                    {{ include('tva/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune TVA</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
