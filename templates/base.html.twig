<!DOCTYPE html>
<html>
	<head>
		<meta
		charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		{# <meta name="viewport" content="width=device-width, initial-scale=1.0"> #}
		<title>
			{% block title %}Point&Pixel
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
									and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital@0;1&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/a0e3886f09.js" crossorigin="anonymous"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% block stylesheets %}
			{# {{ encore_entry_script_tags('app') }} #}
			<link
			rel="stylesheet" href="{{ asset('css/home.css') }}">

		{# {{parent()}} #}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% block javascripts %}
			{# {{ encore_entry_script_tags('app') }} #}

		{% endblock %}
	</head>
	<body>
		<header>
		<div class="container-fluid d-none d-md-flex justify-content-beetween align-items-center my-3" id="rowheadertop">
			<div class="col-2" style="width:136px">
					<img src="{{asset('images/60e719a396c35.png') }}" alt="logo" class="img-fluid logo">
			</div>
			<div class="col-8 text-center">
				<h1 >POINT & PIXEL</h1>
				<h1>La vitrine des artistes
				</h1>
			</div>
			<div class="col-2 icon text-end fs-5" >
				<i class="fas fa-search"></i>

				<a href="{{ path('app_login') }}">
					<i class="far fa-user me-1"></i>
				</a>
				{% if app.user %}
					{# <a href="{{path('panier')}}"><i class="fas fa-shopping-basket"></i><small class="me-1">{{ panier|length }}</small></a> #}
				{% else %}
					<a href="{{path('app_login')}}"><i class="fas fa-shopping-basket"></i></a>
				{% endif %}
			</div>
		</div>
		<div class="container-fluid d-flex justify-content-center align-items-center d-md-none" >
		 	<img src="{{ asset('images/60e719a396c35.png')}}" alt="logo" style="width:120px">
		</div>
		</header>
		<main>
			<nav class="navbar navbar-expand-md navbar-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('home') }}">Point&Pixel</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavDropdown">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#">Qui sommes-nous ?</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="galerie" role="button" data-bs-toggle="dropdown" aria-expanded="false">Nos galeries
							</a>
							<ul class="dropdown-menu" aria-labelledby="galerie">
								<li>
									<a class="dropdown-item" href="{{path('vitrine') }}">Art Graphique</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Art Numérique</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Images</a>
								</li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="vosoeuvres" role="button" data-bs-toggle="dropdown" aria-expanded="false">Vos oeuvres</a>
							<ul class="dropdown-menu" aria-labelledby="vosoeuvres">
								<li>
									<a class="dropdown-item" href="{{path('vitrine') }}">Acheter</a>
								</li>
								{% if app.user %}
									<li class="nav-item">
										<a class="dropdown-item" aria-current="page" href="{{path('add_tableau')}}">Insérer</a>
									</li>
								{% else %}
									<li class="nav-item">
										<a class="dropdown-item" aria-current="page" href="{{path('app_login')}}">Insérer</a>
									</li>
								{% endif %}
								<li>
									<a class="dropdown-item" href="#">Guide pratique</a>
								</li>
							</ul>
						</li>
						<a class="nav-link" href="#">Contact</a>


						{% if app.user %}

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								mon profil
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								<li class="nav-item">
									<a class="nav-link active" aria-current="page" href="{{path('app_logout')}}">Deconnexion</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('edit_register', { 'id': app.user.id}) }}">Modifier mon profil</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('panier')}}">panier</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('profil')}}">Ma gestion
									</a>
								</li>

								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="{{path('delete_panier') }}">Supprimer panier</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('delete_profil') }}">Supprimer mon compte</a>
								</li>
							</ul>
						</li>
					{% else %}
						{# <li class="nav-item">
														<a class="nav-link active" aria-current="page" href="{{path('app_register')}}">Inscription</a>
													</li> #}
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path('app_login')}}">
								<i class="far fa-user me-1"></i>
								<small>se connecter / s'inscrire</small>
							</a>
						</li>

					{% endif %}
				</ul>
			</div>
		</div>
	</nav>

	{% if is_granted('ROLE_ADMIN') %}
 	<nav class="navbar navbar-expand-sm navbar-light bg-light">
	<div class="container-fluid">
    	<a class="navbar-brand" href="#">Navbar</a>
    	<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    	<span class="navbar-toggler-icon"></span>
	</button>
    	<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    		<div class="navbar-nav">
				<a class="nav-link" href="{{path('oeuvre')}}">Dash-Tableaux</a>
				<a class="nav-link" href="{{path('user_index')}}">Utilisateurs</a>
				<a class="nav-link" href="{{path('category_index')}}">Catégories</a>
				<a class="nav-link" href="{{path('carousel_index')}}">Carousel</a>
				<a class="nav-link" href="{{path('tva_edit',{'id':1})}}">Tva</a>
			</div>
    	</div>
  	</div>
	</nav> 

{% endif %}
{% block body %}{% endblock %}
</main>
</body>
</html>
