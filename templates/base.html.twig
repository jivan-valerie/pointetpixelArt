										<a class="dropdown-item" href="{{path('guide') }}">Guide pratique</a>
									</li>
								</ul>
							</li>
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{path('mes_artistes')}}">Vos artistes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{path('contact')}}">Contact</a>
							</li>

							{% if app.user %}
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" id="profilmenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										<i class="far fa-user"></i>
									</a>
									<ul class="dropdown-menu" aria-labelledby="profilmenu">
										<li class="nav-item">
											<a class="dropdown-item" aria-current="page" href="{{path('app_logout')}}">Deconnexion</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('edit_register', { 'id': app.user.id}) }}">Modifier mon profil</a>
										</li>

										{% if is_granted('ROLE_ARTIST') %}
											<li>
												<a class="dropdown-item" href="{{path('mes_tableaux')}}">Mes Tableaux</a>
											</li>
											<li>
												<a class="dropdown-item" href="{{path('mes_videos')}}">Mes Vidéos</a>
											</li>
