{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1>Détails utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr> 
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Complement_adresse</th>
                <td>{{ user.complementAdresse }}</td>
            </tr>
        </tbody>
    </table>
    

    <a href="{{ path('user_index') }}">retour à la liste</a>
    {# <a href="{{ path('user_bannir',{'id': user.id}) }}" class="btn btn-primary">bannir cet utilisateur</a> #}

</div>
{% endblock %}
