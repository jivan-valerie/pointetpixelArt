{% extends 'index.html.twig' %}

{% block title %}Dashboard Tableaux{% endblock %}

{% block body %}
<div class="container mt-auto text-center">
<h2 class= "my-4"> Dashboard Tableaux </h2>
  {# <div class= "row"> #}
{# <a href= "{{ path('add_tableau')}}" class="btn-success">Ajouter un article</a> #}
    <table class="table">
      <thead>
        <tr>
          <th class="col">id</th>
          <th class="col">Titre</th>
          <th class="col">Auteur</th>
          <th class="col">images</th>
          <th class="col">cat√©gories</th>
          <th class="col">prix</th>
          <th class="col">vendu</th>
          <th class ="col">action</th>
        </tr>
      </thead>
      <tbody>
        {% for item in liste_tableaux %}
          <tr>
            <td>{{item.id}}</td>
              <td>{{item.titre}}</td>
              <td>{{item.auteur}}</td>
              <td><img src ="{{asset('images/' ~ item.image)}}" style ="width:70px" ></td>
              <td>{{item.category.name}}</td>
              <td>{{item.prix}}</td>
              <td>{% if item.vendu == true %}
              Vendu</td>
              {% endif %}
              <td>
                <a href="{{path('edit_tableau', {'id': item.id})}}"><i class="fas fa-edit ms-2 me-2"></i></a>
                <a href="{{path('delete_tableau', {'id': item.id})}}"><i class="fas fa-trash me-1"></i></a>
              </td>
          </tr>
        
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>


{% endblock %}



