                <td>{{ image.titre }}</td>
                <td>{{ image.description }}</td>
                <td><img src ="{{ asset('images/' ~ image.image) }}" style ="width:70px" ></td>
                <td>
                    <a href="{{ path('images_show', {'id': image.id}) }}"><i class="fas fa-eye ms-2 me-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune image insérée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
