{% extends 'base.html.twig' %}

{% block title %}Artnumerique index{% endblock %}

{% block body %}
<h2 class="text-center mb-5 mt-3">Mes vidéos</h2>

  <div class="container mt-auto d-none d-lg-flex">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Description</th>
                <th>Iframe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artnumerique in liste_videos %}
            <tr>
                <td>{{ artnumerique.id }}</td>
                <td>{{ artnumerique.titre }}</td>
                <td>{{ artnumerique.auteur }}</td>
                <td>{{ artnumerique.description }}</td>
                <td>{{ artnumerique.iframe }}</td>
                <td>
                    <a href="{{ path('video_show', {'id': artnumerique.id}) }}">show</a>
                    {# <a href="{{ path('supprimer_video', {'id': artnumerique.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="container mt-auto d-flex d-lg-none">

		<table class="table">
			{% for row in liste_videos %}
				<tbody>
					
					<tr>
						<th>Titre</th>
						<td>{{ row.titre }}</td>
					</tr>
					<tr>
						<th>Auteur</th>
						<td>{{ row.auteur }}</td>
					</tr>
					<tr>
						<th>description</th>
						<td>{{ row.description }}</td>
					</tr>
					
					<tr>
						<th>actions</th>
						<td>
							<a href="{{path('video_show', {'id': row.id})}}">
								<i class="fas fa-eye ms-2 me-2"></i>
							</a>
						</td>
					</tr>

					{% else %}
					<tr>
						<td colspan="7">
							Aucune vidéo insérée
						</td>
					</tr>

					{% endfor %}
				</tbody>
		</table>
	</div>

{% endblock %}
