{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}
{# montre les détails d'un tableau singulier selon son Id #}
{# il est possible de modifier par l'edit  et supprimer ce tableau de cet id #}

{% block body %}
    <div class="container col-md-10 col-lg-6 my-3">

    <h4 class="text-center">Détails du Slide {{ carousel.indice }}</h4>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Image</th>
                <td><img src ="{{asset('images/' ~ carousel.image)}}" style ="width:70px" ></td>
            </tr>
            {# <tr>
                <th>Indice</th>
                <td>{{ carousel.indice }}</td>
            </tr> #}
            <tr>
                <th>Lien</th>
                <td>{{ carousel.lien }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carousel.description }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between mt-4 ">
    <a href="{{ path('carousel_index') }}"><button class="firstitem fs-5">Retour</button></a>
    {{ include('carousel/_delete_form.html.twig') }}
    {# <a href="{{ path('carousel_edit', {'id': carousel.id}) }}"><button class="secondbuttonitem fs-5">Modifier</button></a> #}
</div>
   
</div>
{% endblock %}
