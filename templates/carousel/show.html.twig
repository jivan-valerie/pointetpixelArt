{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}
{# montre les détails d'un tableau singulier selon son Id #}
{# il est possible de modifier par l'edit  et supprimer ce tableau de cet id #}

{% block body %}
    <h1>Carousel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ carousel.image }}</td>
            </tr>
            <tr>
                <th>Indice</th>
                <td>{{ carousel.indice }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carousel.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('carousel_index') }}">retour à la liste</a>

    <a href="{{ path('carousel_edit', {'id': carousel.id}) }}">edit</a>

    {{ include('carousel/_delete_form.html.twig') }}
{% endblock %}
